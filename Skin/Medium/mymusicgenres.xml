<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <id>504</id>
    <defaultcontrol>1000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <disabletopbar>no</disabletopbar>

    <rememberLastFocusedControl>yes</rememberLastFocusedControl>


    <define>#header.label:#currentmodule</define>

    <controls>

        <include>common.background.default.xml</include>
        <include>mymusic.background.xml</include>
        <include>mymusic.common.hiddenMenu.xml</include>

        <control Style="hiddenStyle">
            <description>View Control - Selected Toggle, has text for every other item</description>
            <type>label</type>
            <id>5544</id>
            <label>#(iif(neq(string.rtrim(#selectedindex,'1,3,5,7,9'),#selectedindex),'',' '))</label>
        </control>
        
        <control Style="shadowTextStyle">
            <description>Selected Item</description>
            <type>textbox</type>
            <label>#(iif(eq(#selecteditem,''),#currentmodule,#selecteditem))</label>
            <lineSpacing>0.6</lineSpacing>
        </control>
        <include>common.header.xml</include>

            <control Style="overlayStyle">
                <description>Overlay for List, Album, Small and Large Icon View</description>
                <type>image</type>
                <posX>0</posX>
                <posY>130</posY>
                <width>1240</width>
                <height>614</height>
            </control>
            <control Style="overlayStyle">
                <description>Small Overlay for spin controls</description>
                <type>image</type>
                <posX>1080</posX>
                <posY>743</posY>
                <width>160</width>
                <height>50</height>
            </control>

            <control Style="overlayStyle">
                <description>Overlay for Details in List, Album, Small and Large Icon View</description>
                <type>image</type>
                <posX>1280</posX>
                <posY>130</posY>
                <width>614</width>
                <height>614</height>
            </control>
            
            <control Style="thumbStyle">
                <type>image</type>
                <id>1</id>
                <posX>1287</posX>
                <posY>137</posY>
                <width>600</width>
                <height>600</height>
                <texture>#skin.DefaultCDArt</texture>
                <visible>!string.equals(#music.title,)+skin.hassetting(#skin.ShowCDArt)+!control.hasthumb(10011)</visible>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="Control.HasText(5544)">Conditional</animation>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="!Control.HasText(5544)">Conditional</animation>
                <animation effect="rotate" end="-360" time="8000" loop="true" condition="True">Conditional</animation>
                <animation effect="fade" time="200" end="0">WindowClose</animation>
            </control>
        
            <control Style="thumbStyle">
                <type>image</type>
                <id>10012</id>
                <posX>1287</posX>
                <posY>137</posY>
                <width>600</width>
                <height>600</height>
                <texture mask="cd_mask.png">#selectedthumb</texture>
                <visible>!string.equals(#music.title,)+skin.hassetting(#skin.ShowCDArt)+control.hasthumb(30014)</visible>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="Control.HasText(5544)">Conditional</animation>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="!Control.HasText(5544)">Conditional</animation>
                <animation effect="rotate" end="-360" time="8000" loop="true" condition="True">Conditional</animation>
                <animation effect="fade" time="200" end="0">WindowClose</animation>
            </control>
        
            <control Style="thumbStyle">
                <type>image</type>
                <id>10011</id>
                <posX>1287</posX>
                <posY>137</posY>
                <width>600</width>
                <height>600</height>
                <texture>..\..\..\Thumbs\CDArt\Music\#music.artist - #music.album.png</texture>
                <visible>!string.equals(#music.title,)+skin.hassetting(#skin.ShowCDArt)</visible>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="Control.HasText(5544)">Conditional</animation>
                <animation effect="slide" delay="500" start="0,0" end="0,290" time="500" easing="out" tween="cubic" reversible="false" condition="!Control.HasText(5544)">Conditional</animation>
                <animation effect="rotate" end="-360" time="8000" loop="true" condition="True">Conditional</animation>
                <animation effect="fade" time="200" end="0">WindowClose</animation>
            </control>
        
            <control Style="thumbStyle">
                <type>image</type>
                <id>30013</id>
                <posX>1387</posX>
                <posY>885</posY>
                <width>400</width>
                <height>155</height>
                <texture>..\..\..\Thumbs\ClearArt\Music\#music.artist.png</texture>
            </control>

            <control Style="thumbStyle">
                <type>image</type>
                <id>30014</id>
                <visible>!string.equals(#selectedthumb,)</visible>
            </control>
            <!-- Thumb/Details View for Music Files -->
            <control Style="overlayStyle">
                <type>image</type>
                <posX>1280</posX>
                <posY>569</posY>
                <width>614</width>
                <height>175</height>
                <visible>!string.equals(#selectedthumb,)+!string.equals(#music.title,)</visible>
            </control>
            <control Style="subHeaderStyle">
                <description>Song Title</description>
                <type>fadelabel</type>
                <posX>1285</posX>
                <posY>565</posY>
                <width>614</width>
                <label>#music.track. #music.title</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <control Style="labelStyle">
                <description>Artist</description>
                <type>fadelabel</type>
                <posX>1285</posX>
                <posY>620</posY>
                <label>#music.artist</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <control Style="labelStyle">
                <description>Album</description>
                <type>fadelabel</type>
                <posX>1285</posX>
                <posY>660</posY>
                <width>450</width>
                <textcolor>FFB75700</textcolor>
                <label>#(iif(or(eq(#music.albumartist,''),eq(#music.albumartist,'Various Artists'),eq(#music.albumartist,#music.artist)),#music.album,string.format('{0} ({1})',#music.album,#music.albumartist)))</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <control Style="labelStyle">
                <description>Year</description>
                <type>label</type>
                <posX>1735</posX>
                <posY>660</posY>
                <width>150</width>
                <textcolor>FF007ACC</textcolor>
                <label>#music.year</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <control Style="labelStyle">
                <description>Genre</description>
                <type>fadelabel</type>
                <posX>1285</posX>
                <posY>700</posY>
                <width>300</width>
                <textcolor>FF007ACC</textcolor>
                <label>#music.genre</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <control Style="labelStyle">
                <description>Genre</description>
                <type>fadelabel</type>
                <posX>1740</posX>
                <posY>700</posY>
                <width>150</width>
                <textcolor>FF007ACC</textcolor>
                <label>#music.duration</label>
                <visible>!string.equals(#music.title,)</visible>
            </control>
            <!--Keep for when MP supports showing ratings for music...
            <control Style="ratingHighlight2Style">
                <type>imagelist</type>
                <id>1</id>
                <posX>1715</posX>            
                <posY>710</posY>
                <percentage>#(mul(cint(iif(eq(#music.rating,''),0,#music.rating)),2))</percentage>
                <align>left</align>
                <subitems>
                    <subitem>star_open_highlight2.png</subitem>
                    <subitem>star_closed_highlight2.png</subitem>
                </subitems>
                <visible>!string.equals(#music.title,)</visible>
            </control>-->
             <control>
                <type>image</type>
                <posX>1280</posX>
                <posY>130</posY>
                <width>40</width>
                <height>40</height>
                <texture>isplaying.png</texture>
                <visible>false</visible>
            </control>
             <control>
                <type>image</type>
                <posX>1280</posX>
                <posY>130</posY>
                <width>40</width>
                <height>40</height>
                <texture>ispaused.png</texture>
                <visible>false</visible>
            </control>

            <!-- Thumb/Details View for Folders -->
            <control Style="overlayStyle">
                <type>image</type>
                <posX>1280</posX>
                <posY>674</posY>
                <width>614</width>
                <height>70</height>
                <visible>!string.equals(#selectedthumb,)+string.equals(#music.title,)</visible>
            </control> 
            <control Style="subHeaderStyle">
                <type>fadelabel</type>
                <posX>1285</posX>
                <posY>675</posY>
                <width>614</width>
                <label>#selecteditem</label>
                <visible>string.equals(#music.title,)</visible>
            </control>
        
        <include>common.Overlay.NowPlaying.xml</include>
        <include>mymusic.common.facade.xml</include>
        <include>common.footer.xml</include>
    </controls>
</window>